{{!--
This error template is used for all 404 errors, which might occur on your site.
It's a good idea to keep this template as minimal as possible in terms of both file size and complexity.
--}}

{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

<main id="site-main" class="site-main outer">
    <div class="inner">

        <section class="error-message text-center">
            <h1 class="error-code text-center display-1">{{code}}</h1>
            <p class="error-description text-center display-4">{{message}}</p>
            <a class="error-link display-4" href="{{@blog.url}}">Go to the front page â†’</a>
        </section>
    </div>
</main>

{{#get "posts" include="tags" limit="6"}}
<div class="outer container">
    <div class="inner">
        <h1 class="serif text-center more-block">Recent Posts</h1>
        <div class="post-feed row">
            {{#foreach posts}}
                {{> "post-card"}}
            {{/foreach}}
        </div>
    </div>
</div>
{{/get}}
