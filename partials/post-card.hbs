{{#unless featured}}
<div class="card post-card col-sm-6 col-md-4 {{post_class}}{{#if featured}} featured{{/if}}">
    <div class="card-header post-card-meta {{#if feature_image}}with-image{{/if}}">
        {{#if primary_tag}}
        {{#primary_tag}}
                <span class="card-subtitle"><a class="text-danger" href="{{url}}">{{name}}</a></span>
        {{/primary_tag}}
        {{/if}}
        <span class="reading-time text-muted float-right">{{reading_time}}</span>

    </div>
    {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        <img class="card-img-top" style="background-image: url({{feature_image}})"></img>
    </a>
    {{/if}}
    <div class="card-body post-card-content">
        <a class="post-card-content-link" href="{{url}}">
            <header class="post-card-header">
                <h3 class="card-title serif text-dark">{{title}}</h3>
            </header>
            <section class="post-card-excerpt text-dark">
                <p>{{excerpt words="25"}}...</p>
            </section>
        </a>
    </div>
</div>
{{/unless}}
{{#if featured}}
<div class="card event-card post-card col-sm-6 col-md-4 {{post_class}}{{#if featured}} featured{{/if}}">
    <div class="card-body post-card-content">
        <a class="post-card-content-link" href="{{url}}">
            <header class="post-card-header">
                <h3 class="card-title serif text-dark">{{title}}</h3>
            </header>
            <section class="post-card-excerpt text-primary">
                <p>
                    <i class="material-icons align-middle">
                        access_time
                    </i>
                {{excerpt words="25"}}</p>
            </section>
        </a>
    </div>
    {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        <img class="card-img-bottom" style="background-image: url({{feature_image}})"></img>
    </a>
    {{/if}}
    {{#unless feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        <img class="card-img-bottom" style="background-image: url({{@blog.cover_image}})"></img>
    </a>
    {{/unless}}
</div>
{{/if}}