{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}

{{!-- The main content area --}}
<main id="author-main" class="site-main outer">
    <div class="inner">
        {{#author}}
        <div class="site-header-content text-center">
            <div class="author-meta">
                {{#if location}}
                    <div class="author-location">{{location}} <span class="bull">&bull;</span></div>
                {{/if}}
                <div class="author-stats text-danger">
                    {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}
                    <span class="date-divider text-dark">/</span>
                    {{#if website}}
                    <a class="social-link social-link-wb" href="{{website}}" target="_blank" rel="noopener">{{> "icons/website"}}</a>
                    {{/if}}
                    {{#if twitter}}
                        <a class="social-link social-link-tw" href="{{twitter_url}}" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
                    {{/if}}
                    {{#if facebook}}
                        <a class="social-link social-link-fb" href="{{facebook_url}}" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
                    {{/if}}
                </div>
            </div>
            <h1 class="post-full-title display-4 serif">{{name}}</h1>
        </div>
            {{#if cover_image}}
            <figure class="post-full-image" style="background-image: url({{cover_image}})">
            </figure>
            {{else}}
            <figure class="post-full-image" style="background-image: url({{@blog.cover_image}})">
            </figure>
            {{/if}}
            <div class="card post-full-card container">
                <div class="post-full-content-container card-body col-lg-10 mr-auto ml-auto text-center">
                    {{#if profile_image}}
                        <div class="author-profile-image author-full mr-auto ml-auto" style="background: url({{profile_image}})" alt="{{name}}" /></div>
                    {{else}}
                        <div class="author-profile-image author-full mr-auto ml-auto">{{> "icons/avatar"}}</div>
                    {{/if}}
                    <span class="post-full-content">
                        {{#if bio}}
                            {{bio}}
                        {{else}}
                            Read all posts by this author.
                        {{/if}}
                    </span>
                </div>
            </div>
        {{/author}}
        <div class="author-feed">
            <div class="container">
                <h1 class="serif text-center more-block">Posts</h1>
                <div class="post-feed row">  
                    {{#foreach posts}}

                        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                        {{> "post-card"}}

                    {{/foreach}}
                </div>
                {{pagination}}
        </div>
    </div>
    </div>
</main>
